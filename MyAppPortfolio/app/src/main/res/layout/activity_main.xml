<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#6A1B9A">

        <TextView
            android:text="My Nanodegree Apps!!"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:textColor="#FFAB00"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:contentDescription="My Nanodegree Apps!!"/>



        <Button
            android:id="@+id/andriod_spotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="#FFC400"
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:text="Spotify Steamer"
            android:onClick="displayToast"/>




        <Button
                android:id="@+id/andriod_scores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#FFC400"
                android:textSize="20sp"
                android:textColor="#388E3C"
                android:text="Scores App"
                android:onClick="displayToast"/>

        <Button
            android:id="@+id/andriod_lib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#FFC400"
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:text="Library App"
            android:onClick="displayToast"
            />
        <Button
            android:id="@+id/andriod_build_it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#FFC400"
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:text="Build It Bigger"
            android:onClick="displayToast"
            />

        <Button
            android:id="@+id/andriod_xyz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#FFC400"
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:text="XYZ Reader"
            android:onClick="displayToast"
            />
        <Button
            android:id="@+id/andriod_capstone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#FFC400"
            android:textSize="20sp"
            android:textColor="#388E3C"
            android:text="CAPSTONE:My Own App"
            android:onClick="displayToast"
            />




    </LinearLayout>




</RelativeLayout>
